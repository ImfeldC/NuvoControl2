<UserControl x:Class="NuvoControl.Client.Viewer.Controls.ServerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="230">
    <Grid Height="47" Width="229">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="116*" />
            <ColumnDefinition Width="113*" />
        </Grid.ColumnDefinitions>
        <Button Content="Connect" Height="23" HorizontalAlignment="Left" Margin="26,12,0,0" Name="_btnServerConnect" VerticalAlignment="Top" Width="75" Click="_btnServerConnect_Click" Grid.Column="1" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="_cboxServerList" VerticalAlignment="Top" Width="120" DataContext="{Binding}" ItemsSource="{Binding}" Grid.ColumnSpan="2" />
    </Grid>
</UserControl>
